                right: -1rem;
                .select-group
                {
                    padding: 5rem 12rem;
                    line-height: 12rem;
                    font-size: 12rem;
                }
                .select-option
                {
                    padding: 5rem 12rem;
                    line-height: 12rem;
                    font-size: 12rem;
                }
            }
            &.focus,
            &.fill
             {
                .input
                {
