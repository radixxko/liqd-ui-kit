<style require="/main.style">
    .main-content
    {
        width: 1140px;
        margin: var(--padding-5) auto;
        h3{ width: 100%; }
        .flex
        {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        table
        {
            width: 100%;
            th
            {
                @font-14;
                font-weight: bold;
                border-bottom: 1px solid var(--gray-2);
                padding-bottom: var(--padding-0);
                margin-bottom: var(--padding-0);
            }
            td{ padding: var(--padding-0) 0; }
        }
    }
</style>
<div class="main-content">
    <table>
        <tr>
            <th align="left">Input</th>
            <th align="left">type</th>
            <th align="left">default</th>
            <th align="left">required</th>
        </tr>
        <tr>
            <td>required</td>
            <td>true</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>size</td>
            <td>small, medium, big</td>
            <td>medium</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>selector</td>
            <td>string</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>label</td>
            <td>string</td>
            <td>undefined</td>
            <td>YES</td>
        </tr>
        <tr>
            <td>value</td>
            <td>string</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>onChange</td>
            <td>function</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>autocomplete</td>
            <td>true</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>required</td>
            <td>true</td>
            <td>undefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>width</td>
            <td>string</td>
            <td>100%</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>style</td>
            <td>string</td>
            <td>udefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>error</td>
            <td>string</td>
            <td>udefined</td>
            <td>NO</td>
        </tr>
        <tr>
            <td>success</td>
            <td>string</td>
            <td>udefined</td>
            <td>NO</td>
        </tr>
    </table>
    <div class="flex">
        <h3>Input small</h3>
        <Input type="text" label="small" size="small" width="calc(97% / 4)" />
        <Input type="text" label="error" size="small" error="true" width="calc(97% / 4)" />
        <Input type="text" label="success" size="small" success="true" width="calc(97% / 4)" />
        <Input type="text" label="small" size="small" value="value" width="calc(97% / 4)" />
    </div>
    <div class="flex">
        <h3>Input medium</h3>
        <Input type="text" label="medium" size="medium" width="calc(97% / 4)" />
        <Input type="text" label="error" size="medium" error="true" width="calc(97% / 4)" />
        <Input type="text" label="success" size="medium" success="true" width="calc(97% / 4)" />
        <Input type="text" label="medium" size="medium" value="value" width="calc(97% / 4)" />
    </div>
    <div class="flex">
        <h3>Input big</h3>
        <Input type="text" label="big" size="big" width="calc(97% / 4)" />
        <Input type="text" label="error" size="big" error="true" width="calc(97% / 4)" />
        <Input type="text" label="success" size="big" success="true" width="calc(97% / 4)" />
        <Input type="text" label="value" size="big" value="value" width="calc(97% / 4)" />
    </div>
</div>
